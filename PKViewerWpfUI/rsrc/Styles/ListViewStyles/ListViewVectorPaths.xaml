<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:p="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <!--Треугольник вверх-->
    <PathGeometry x:Key="TriangleTop" p:Freeze="True">
        <PathGeometry.Figures>
            <PathFigureCollection>
                <PathFigure IsClosed="False"
                            StartPoint="0 6">
                    <PathFigure.Segments>
                        <PathSegmentCollection>
                            <LineSegment IsSmoothJoin="True" Point="10 6"/>
                            <LineSegment IsSmoothJoin="True" Point="5 0"/>
                        </PathSegmentCollection>
                    </PathFigure.Segments>
                </PathFigure>
            </PathFigureCollection>
        </PathGeometry.Figures>
    </PathGeometry>

    <!--Треугольник вниз-->
    <PathGeometry x:Key="TriangleBottom" p:Freeze="True">
        <PathGeometry.Figures>
            <PathFigureCollection>
                <PathFigure IsClosed="False"
                            StartPoint="0 0">
                    <PathFigure.Segments>
                        <PathSegmentCollection>
                            <LineSegment IsSmoothJoin="True" Point="10 0"/>
                            <LineSegment IsSmoothJoin="True" Point="5 6"/>
                        </PathSegmentCollection>
                    </PathFigure.Segments>
                </PathFigure>
            </PathFigureCollection>
        </PathGeometry.Figures>
    </PathGeometry>
</ResourceDictionary>